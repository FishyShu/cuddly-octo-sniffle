<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B03F51B5">

    <ImageView
        android:id="@+id/iv_splashscreen_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="The logo of the application"
        android:src="@drawable/splashscreen_logo"
        android:background="#05000000"
        app:layout_constraintBottom_toTopOf="@+id/progressBar1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:indeterminateTint="@color/progress_bar"
        android:indeterminateTintMode="src_in"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/custom_progressbar"
        android:progressTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_splashscreen_logo"
        app:layout_constraintVertical_bias="0.55" />

    <!-- Add fade-in animation to the ImageView and ProgressBar programmatically -->

    <!-- Add branding elements or creative elements like a tagline or app icon overlay -->

</androidx.constraintlayout.widget.ConstraintLayout>
